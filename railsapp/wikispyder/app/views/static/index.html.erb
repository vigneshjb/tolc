
<div class="center jumbotron">
  <% if user_signed_in? %>
	<h1> Welcome to WikiSpyder, <%= current_user.name %>!</h1>

	<h2>
		This is your home page for <%= link_to "WikiSpyder", root_path %>
	</h2>

	<br/> <br/>

	<div class="row col-md-offset-3">
		<div class="col-md-6">
			<%= link_to "Go to Dashboard", feeds_path, class: "btn btn-lg btn-primary" %>
		</div>
		<div class="col-md-6">
			<%= link_to "Go to Wiki Searcher", search_path,  class: "btn btn-lg btn-primary" %>
		</div>
	</div>
  <% else %>
	<h1> Welcome to WikiSpyder, Guest!</h1>
	<h2>
                This is the home page for <%= link_to "WikiSpyder", root_path %>
        </h2>

	<br />
	<p class="lead">
		To start accessing WikiSpyder, <%= link_to "Sign In", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %>!
	</p>
	<br />

	 <div class="row col-md-offset-3">
                <div class="col-md-6">
			<%= link_to "Sign In", new_user_session_path, class: "btn btn-lg btn-success" %>
		</div>
		<div class="col-md-6">
			<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-lg btn-success" %>
		</div>
	</div>
  <% end %>

</div>

	

<% if false %>
<ul>
	<li> <%= link_to("Goto Dashboard", feeds_path) %> </li>
	<li> <%= link_to("Goto the Wiki Searcher", search_path) %> </li>
</ul>
<% end %>
